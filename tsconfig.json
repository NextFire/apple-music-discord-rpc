{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["@types", "src/interfaces"],
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "@util/*": ["util/*"],
      "@managers/*": ["managers/*"],
      "@interfaces/*": ["interfaces/*"],
      "@classes/*": ["classes/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true
  },
  "include": ["src/*"]
}
